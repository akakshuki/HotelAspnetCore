@model List<AppAdmin.Models.DTOs.CategoryRoomMv>
@{
    ViewData["Title"] = "CategoriesRoom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container ">
        <h3 class="text-center">
            Category Room
        </h3>

        <div>
            <a class="text-success " href="@Url.Action("CreateCategoryRoom")">Create</a>
        </div>
        <table class="col-md-12 table">
            <thead>
            <tr>

                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th> </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in @Model)
            {
                <tr>

                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@Html.ActionLink("Detail","DetailCategoryRoom", new {id =@item.Id})</td>
                </tr>
            }

            </tbody>
        </table>
    </div>