@model List<AppAdmin.Models.DTOs.RoomMv>
@{
    ViewData["Title"] = "Rooms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container ">
    <h3 class="text-center">
        Category Room
    </h3>

    <div>
        <a class="text-success " href="@Url.Action("CreateRooms")">Create</a>
    </div>
    <table class="col-md-12 table">
        <thead>
            <tr>

                <th scope="col">Room Number</th>
                <th scope="col">Category</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model)
            {
                <tr>

                    <td>@item.RoomNo</td>
                    <td>@item.CategoryRoomMv.Name</td>
                    <td>
                        @Html.ActionLink("Detail", "DetailRoom", new { id = @item.Id })
                        |@Html.ActionLink("Delete", "DeleteRoom", new { id = @item.Id })
                        |@Html.ActionLink("Update", "UpdateRoom", new { id = @item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>