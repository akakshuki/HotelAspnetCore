@using AppAdmin.Models.DTOs

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<GuestMv> list = ViewBag.ListGuest;
    List<BookingMv> listOnline = ViewBag.ListBookingOnline;
    List<BookingMv> listBook = ViewBag.ListBooking;
}
@section jsFooter
{
    <script src="~/js/bookingController.js"></script>
}

<div class="container">
    <h3 class="text-center">Manage Booking</h3>
    <div class="row mb-5">
        <div class="col-lg-5">
            <h5>Manage Customer</h5>
            <div class="form-group row">
                <input type="text" name="Search" placeholder="identity code"
                       class="col-md-8 form-control mx-3 mt-3" />
                <button style="max-width: 10rem; max-height: 40px;"
                        class="btn btn-primary col-md-4 mt-3 mx-3">
                    search
                </button>
            </div>
            <div class="mt-3">
                <h5>Guest</h5>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Identity</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in list)
                        {
                            <tr>
                                <td>@item.FirstName</td>
                                <td>@item.LastName</td>
                                <td>@item.Phone</td>
                                <td>@item.IdentityNo</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
        <div class="col-md-7">
            <h5>List booking</h5>
            <div class="form-group row">
                <input type="text" name="Search" id="searchCodeInput" placeholder="Serect code"
                       class="col-md-8 form-control mx-3 mt-3" />
                <button id="buttonSearchSecretCode" style="max-width: 10rem; max-height: 40px;"
                        class="btn btn-primary col-md-4 mt-3 mx-3">
                    search
                </button>
            </div>
            <div class="mt-3">
                <h5>List booking Online</h5>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">secret code</th>
                            <th scope="col">Booking date</th>
                            <th scope="col">CheckIn date</th>
                            <th scope="col">Status</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in listOnline)
                        {
                        <tr>
                            <th>@item.SecretCode</th>
                            <td>@item.BookingDate</td>
                            <td>@item.CheckIn</td>
                            <td>@item.Status</td>
                            <td>
                                <a href="@Url.Action("CancelBooking","Booking",new
                                         {
                                             secretCode = item.SecretCode
                                         })" class="btn btn-danger">Cancel</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="mt-3">
                <h5>
                    List booking locals
                </h5>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">secret code</th>
                            <th scope="col">Booking date</th>
                            <th scope="col">CheckIn date</th>
                            <th scope="col">Status</th>
                          
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in listBook)
                        {
                            <tr class="bookedData" data-secretCode="@item.SecretCode">
                                <th>@item.SecretCode</th>
                                <td>@item.BookingDate</td>
                                <td>@item.CheckIn</td>
                                <td>@item.Status</td>
                               
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-12 row p-5">
        <div class="col-md-3 mt-1">
            <a href="@Url.Action("Booking","Booking")" class="btn btn-success">Add new</a>
        </div>
        <div class="col-md-3 mt-1">
            <a href="@Url.Action("CheckInRoom","Booking")" class="btn btn-warning">checkin room</a>
        </div>
        <div class="col-md-3 mt-1">
            <a href="@Url.Action("CheckOutRoom","Booking")" class="btn btn-danger">checkOut room</a>
        </div>
        <div class="col-md-3 mt-1">
            <a href="@Url.Action("AddServices","Booking")" class="btn btn-info">add service</a>
        </div>
    </div>
</div>